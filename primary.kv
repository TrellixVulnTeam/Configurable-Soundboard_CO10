<Setting>:
    name: "setting"

    FloatLayout:

        Image:
            source: './png/backdrop.png'
            size_hint_x: 1
            size_hint_y: 1
            keep_ratio: False
            allow_stretch: True
            pos_hint: {"x": 0, "y": 0}

#        ScrollView:
#            size_hint: 1, 1
#            pos_hint: {"x": 0, "bottom": 0}
#            do_scroll_x: False
#            do_scroll_y: True
#            bar_color: (0,0,0,0)

        GridLayout:
            cols: 1
            padding: dp(20)
            spacing: dp(20)
            pos_hint: {"x": 0, "top": 1}
            size_hint: 1, None
            height: self.minimum_height

            Label:
                text: "Subscribe and Follow Nmeade!"
                size_hint: 1, None
                #height: self.width*.1
                text_size: self.width*.8, None
                halign: 'center'
                valign: 'middle'
                bg_color: (0.0,0.50,0.70,1)
                canvas.before:
                    Color:
                        rgba: self.bg_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [dp(10)]

            GridLayout:
                cols: 2
                spacing: dp(40)
                padding: 0
                size_hint: 1, None
                height: self.minimum_height

                Button:
                    text: ""
                    size_hint: .3, None
