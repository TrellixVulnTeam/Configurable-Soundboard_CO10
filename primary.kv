#: import threading threading

<Principal>
    name: "principal"
    backdropsrc: './png/fulltransparent.png'

    redyx: -0.5
    redyy: -0.5
    greenx: -0.5
    greeny: 0
    animtime: 99
    backdropsource: ''
    layer1posx: 0.3
    layer1posy: -0.5
    layer2posx: 0
    layer2posy: -1

    FloatLayout:

        Image:
            id: back
